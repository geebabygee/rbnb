<h2 style="color: white; margin-top: 150px; margin-bottom: 50px; margin-left: 33%">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" style="margin-left: 33%; width: 33%;">
    <%= f.input :email, required: true, autofocus: true, placeholder: "Email" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
