<h2 style="text-align: center; color: white; margin-top: 150px">Urban<span style="color: #8332AC;">Cam</span></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs" style="width: 33%; text-align: center; margin-left: 33%">
    <%= f.input :email, required: false, autofocus: true, placeholder: 'Email' %>
    <%= f.input :password, required: false, placeholder: 'Password' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="btn-login">



  <%= f.button :submit, "Log in" %>

<% end %>

</div>

<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>

  <br>

  <% else %>

<%= render "devise/shared/links" %>

<% end %>

</div>
